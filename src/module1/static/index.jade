    script(src='/static/portal/portalRootController.js')
    script(src='/static/portal/portalListController.js')
    script(src='/static/portal/portalViewController.js')
    script(src='/static/portal/portalEditController.js')
    script(src='/static/key/keyFactory.js')
    script(src='/static/key/keyListController.js')
    script(src='/static/key/keyService.js')
    script(src='/static/key/keyController.js')
    script(src='/static/settings/settingsController.js')
    base(href='/')
  body(md-theme='{{sysConfig.theme}}', style='font-family: {{sysConfig.font}};')
    div(layout='row', style='height:100%')
      md-sidenav.md-sidenav-left(ng-if='auth.isAuthenticated()', layout='column', layout-fill='', md-component-id='left', md-is-locked-open="$mdMedia('gt-md')", ng-include="'/partials/app_main_menu.html'")
      div(flex='', layout='column')
        md-toolbar.md-toolbar-tools(ng-if='auth.isAuthenticated()', layout-align='center center')
          md-button(hide-gt-md='', aria-label='Menu', ng-click='toggleSideNav()')
            md-icon(md-svg-icon='ic_menu_24px')
          md-button(ng-if='state.current.child', ng-click='backArrow()')
            md-icon(md-svg-icon='ic_arrow_back_24px')
          h1(ng-if='!openSearch', flex='') {{state.current.title}}
          md-card(flex='', ng-if='openSearch && querySearch')
            md-input-container(flex='', style='background-color: white;')
              input(ng-model='search', ng-keyup='onSearchKeyDown($event, search)')
          md-button(ng-show='querySearch && auth.isAuthenticated()', aria-label='Limpiar b√∫squeda actual', ng-click='openSearch = !openSearch')
            md-icon.md-accent(md-svg-icon='action:ic_search_24px', alt='Alarm Icon')
            |         
            md-progress-circular.md-accent(ng-show='searching', md-mode='indeterminate')
        md-content(ng-if='setup', flex='', layout='column', layout-align='center center')
          md-progress-circular.md-warn(md-mode='indeterminate', value='{{setupStatus/setupTotal*100}}')
          span Cargando configuraci&oacute;n
        md-content(ng-if='!setup', flex='', layout='row', ui-view='')
