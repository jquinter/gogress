    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1')
    link(rel='stylesheet', href='/css/app.css')
    link(rel='stylesheet', href='/css/misc_icons.css')
