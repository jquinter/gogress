    script(src='//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js')
    // angular material
    script(src='/static/components/angular-material/angular-material.min.js')
    link(rel='stylesheet', href='/static/components/angular-material/angular-material.min.css')
    // ui-router
    script(src='/static/components/ui-router/release/angular-ui-router.min.js')
