    script(src='/static/appConfig.js')
    script(src='/static/imageViewerController.js')
    script(src='/static/deviceInfoService.js')
    script(src='/static/filters.js')
    script(src='/static/user/userDataFactory.js')
    script(src='/static/user/userDataService.js')
    script(src='/static/user/userService.js')
    script(src='/static/agent/agentFactory.js')
    script(src='/static/agent/agentListController.js')
    script(src='/static/agent/agentService.js')
    script(src='/static/agent/agentController.js')
    script(src='/static/label/labelListController.js')
    script(src='/static/label/labelFactory.js')
    script(src='/static/operation/operationListController.js')
    script(src='/static/operation/operationController.js')
